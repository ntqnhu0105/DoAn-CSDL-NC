@model QuanLyBanVeBenXeMienDong.Models.Data.VeXe

<h2>Xác nhận hủy vé</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div>
    <h4>Bạn có chắc chắn muốn hủy vé này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã vé:</dt>
        <dd class="col-sm-10">@Model.MaVeXe</dd>
        <dt class="col-sm-2">Chuyến xe:</dt>
        <dd class="col-sm-10">@Model.MaChuyen</dd>
        <dt class="col-sm-2">Khách hàng:</dt>
        <dd class="col-sm-10">@Model.KhachHang?.HovaTen (@Model.MaKh)</dd>
        <dt class="col-sm-2">Ghế:</dt>
        <dd class="col-sm-10">@Model.MaSoGhe</dd>
        <dt class="col-sm-2">Trạng thái:</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>
        <dt class="col-sm-2">Ngày đặt vé:</dt>
        <dd class="col-sm-10">@Model.NgayDatVe.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaVeXe" />
        <button type="submit" class="btn btn-danger">Hủy vé</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>